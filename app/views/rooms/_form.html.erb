 <% if room.errors.any? %>
    <div id="error_explanation">
        <% room.errors.full_messages.each do |message| %>
          <div class = 'alert alert-danger'><%= message %></div>
        <% end %>
    </div>
  <% end %>
<div class="card" style="width: 20rem;">
  <div class="card-body">
    <h4 class="card-title text-center"><strong>Create Room</strong></h4>
    <%= form_with(model: room, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :capacity %>
    <%= form.number_field :capacity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-success btn-block'%>
  </div>
<% end %>
<%= link_to 'Back', rooms_path, class: 'btn btn-info btn-block'%>
  </div>
</div>