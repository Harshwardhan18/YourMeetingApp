<%= render "users/shared/error_messages", resource: resource %>

<div class="card" style="width: 20rem;">
  <div class="card-body">
    <h4 class="card-title"><strong>Forgot your password?</strong></h4>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name),class: 'form-control', html: { method: :post }) do |f| %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Reset password instructions", class: 'btn btn-dark btn-block' %>
  </div>
<% end %>
  <%= render "users/shared/links" %>
  </div>
</div>
